<div class="row">
  <div class="large-12 columns">
    <h1>Treehouse Poker</h1>
    <div class="row">
      <div class="large-6 columns">
        <% @game.hands.take(2).each do |hand| %>
            <div class="hand <%= @game.players[hand.id] %>">
              <div class="row">
                <div class="large-2 columns text-center">
                  <div class="avatar" style="background: #fff url(/assets/<%=  @game.players[hand.id].downcase.tr(" " , "-") %>.jpg) no-repeat top center; background-size: auto 100%;"></div>
                  <span class="player-name"><%= @game.players[hand.id] %></span>
                </div>
                <div class="large-10 columns">
                  <ul class="large-block-grid-5 cards">
                    <% hand.cards.each do |card| %>
                        <li><%= image_tag("/assets/cards/back-panel.png") %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
        <% end %>
      </div>
      <div class="large-6 columns">
        <% @game.hands.drop(2).take(2).each do |hand| %>
            <div class="hand <%= @game.players[hand.id] %>">
              <div class="row">
                <div class="large-2 columns text-center">
                  <div class="avatar" style="background: #fff url(/assets/<%=  @game.players[hand.id].downcase.tr(" " , "-") %>.jpg) no-repeat top center; background-size: auto 100%;"></div>
                  <span class="player-name"><%= @game.players[hand.id] %></span>
                </div>
                <div class="large-10 columns">
                  <ul class="large-block-grid-5 cards">
                    <% hand.cards.each do |card| %>
                        <li><%= image_tag("/assets/cards/back-panel.png") %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <div class="hand <%= @game.players[@game.hands.last.id] %>">
      <div class="row">
        <div class="large-2 columns text-center">
          <div class="avatar" style="background: #fff url(/assets/<%=  @game.players[@game.hands.last.id].downcase.tr(" " , "-") %>.jpg) no-repeat top center; background-size: auto 100%;"></div>
          <span class="player-name"><%= @game.players[@game.hands.last.id] %></span>
        </div>
        <div class="large-10 columns">
          <ul class="large-block-grid-5 cards">
            <% @game.hands.last.cards.each do |card| %>
                <li><img src="/assets/cards/<%= card.to_s.downcase.tr(" ","-") %>.png"></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <a href="/home/play" class="button button-primary expand">Display the winner</a>
  </div>
</div>
