<div class="row">
  <div class="large-12 columns">
    <h1>Treehouse Poker</h1>

    <div class="alert-box">The winner is <%= @game.players[@scorer.winning_hand.id] %> with
      a <%= @scorer.winning_hand.rank.to_s.capitalize.tr("_", " ") %> </div>

    <% @game.hands.each do |hand| %>
        <div class="hand <%= @game.players[hand.id] %>">
          <div class="row">
            <div class="large-2 columns"><%= @game.players[hand.id] %></div>
            <div class="large-10 columns">
              <ul class="large-block-grid-5 cards">
                <% hand.cards.each do |card| %>
                    <li><%= card %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    <% end %>
    <a href="#" class="button button-primary expand">Display the winner</a>
  </div>
</div>
